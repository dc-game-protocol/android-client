<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TicTacToeActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <GridLayout
        android:columnCount="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
        android:id="@+id/topleft"
        android:layout_height="100dp"
        android:onClick="topleft"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />

    <Button
        android:id="@+id/top"
        android:layout_height="100dp"
        android:onClick="top"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />

    <Button
        android:id="@+id/topright"
        android:layout_height="100dp"
        android:onClick="topright"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />


    <Button
        android:id="@+id/left"
        android:layout_height="100dp"
        android:onClick="left"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />

    <Button
        android:id="@+id/middle"
        android:layout_height="100dp"
        android:onClick="middle"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />

    <Button
        android:id="@+id/right"
        android:layout_height="100dp"
        android:onClick="right"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />


    <Button
        android:id="@+id/bottomleft"
        android:layout_height="100dp"
        android:onClick="bottomleft"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />

    <Button
        android:id="@+id/bottom"
        android:layout_height="100dp"
        android:onClick="bottom"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />

    <Button
        android:id="@+id/bottomright"
        android:layout_height="100dp"
        android:onClick="bottomright"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""
        android:textSize="28sp" />
    </GridLayout>
    <Button
        android:id="@+id/quitbutton"
        android:layout_width="191dp"
        android:layout_height="80dp"
        android:onClick="quit"
        android:text="Quit"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/responseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="Awaiting other player..."
        android:textSize="28dp" />
</LinearLayout>